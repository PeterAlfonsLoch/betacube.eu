.container.footer
  .row-fluid
    .span4
      %h4.hidden-phone.hidden-tablet= "Subscribe to our mailing list"
      %p= "Subscribe and receive all the latest news right into your inbox."
      :plain
        <!-- Begin MailChimp Signup Form -->
        <link href="http://cdn-images.mailchimp.com/embedcode/slim-081711.css" rel="stylesheet" type="text/css">
        <style type="text/css">
          #mc_embed_signup{background:#fff; clear:left; font:14px Helvetica,Arial,sans-serif; }
        </style>
        <div>
          <form action="http://betacube.us4.list-manage.com/subscribe/post?u=f62e404c4294ec2e3123f2ed2&amp;id=668512e0c3" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required>
            <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
          </form>
        </div>
    .span4.twitter_stream
      = render "shared/twitter_stream"
    .span4.hidden-phone.hidden-tablet
      = link_to image_tag("Sponsor.jpg"), sponsors_path
