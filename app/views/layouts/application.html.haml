!!! XML
!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= main_title
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Telex"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = analytics_init if Rails.env.production?
  %body
    = render "shared/flash"
    = render "shared/menu"
    - if @page == "home"
      = render "shared/jumbo"
      .content-wrap
        .container.content{:class => (@page.to_sym rescue "")}
          = yield
          %hr.soften
    - else
      = render "shared/mini"
      .content-wrap
        .container.content{:class => (@page.to_sym rescue "")}
          = yield
          %hr.soften
    = render "shared/footer"
